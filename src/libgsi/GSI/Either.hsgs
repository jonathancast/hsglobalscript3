{-# LANGUAGE TemplateHaskell #-}
module GSI.Either (gseitherFor, gseitherbind, gseithermap, gseither_mapM, gsleft, gsright, gsleft_view, gsright_view) where

import GSI.Syn (gsvar)
import GSI.Value (GSValue, gslambda_value, gsav)
import GSI.ByteCode (gsbcarg, gsbcapply, gsbcconstr, gsbcconstr_view)
$gsimports

gseitherFor :: GSValue
gseitherFor = [gs:value| λ 'gen. λ 'k. either.>>= gen k |]

gseitherbind = [gs:value| λ 'e. λ 'k. analyze e.
    case left 'e. left e
    case right 'x. k x
|]

gseithermap = [gs:value| λ 'f. λ 'e. analyze e.
    case left 'e. left e
    case right 'x. right (f x)
|]

gseither_mapM = [gs:value| λ 'f. λ 'xn. analyze xn.
    case nil. right nil
    case 'x:'xn1. either.for
            'y ← f x;
            'ys1 ← either.mapM f xn1;
        . right (y:ys1)
|]

gsleft :: GSValue
gsleft = $gslambda_value $ \ x -> $gsbcconstr (gsvar "left") [ $gsav x ]

gsright :: GSValue
gsright = $gslambda_value $ \ x -> $gsbcconstr (gsvar "right") [ $gsav x ]

gsleft_view :: GSValue
gsleft_view = $gslambda_value $ \ ek -> $gsbcarg $ \ sk -> $gsbcarg $ \ e -> $gsbcconstr_view "left" ek sk e

gsright_view :: GSValue
gsright_view = $gslambda_value $ \ ek -> $gsbcarg $ \ sk -> $gsbcarg $ \ e -> $gsbcconstr_view "right" ek sk e
